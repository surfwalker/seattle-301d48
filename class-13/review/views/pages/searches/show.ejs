<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layout/head') %>
</head>

<body>
  <%- include('../../layout/header') %>
  <main>
    <h4>Search Results</h4>
    <ul class="search-results">
      <% searchResults.forEach(book => { %>
      <li data-book-id="<%= book.isbn %>">
        <div class="book-container">
          <img src=<%= book.image_url %>>
          <section>
            <h3><%= book.title %></h3>
            <span><%= book.author %></span>
            <p class="desc"><%= book.description %></p>
          </section>
          <form action='/books' method="post">
            <p>Save This book?</p>
            <input type="text" name="title" value="<%= book.title %>" required>
            <input type="text" name="author" value="<%= book.author %>" required>
            <input type="text" name="isbn" value="<%= book.isbn %>">
            <input type="text" name="image_url" value="<%= book.image_url %>">
            <textarea name="description" value="<%= book.description %>" cols="30"
              rows="5"><%= book.description %></textarea>
            <p>Enter a bookshelf name</p>
            <input type="text" name="bookshelf" required>
            <button id="show-me" type="submit">submit</button>
          </form>
          </section>
      </li>
      <% }) %>
    </ul>
  </main>
  <%- include('../../layout/footer') %>
</body>

</html>