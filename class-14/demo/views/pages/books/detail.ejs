<section class="book-container detail-view">
  <img src="<%= book.image_url %>" />
  <h3>
    <%= book.title %><% if (book.subtitle) { %>: <%= book.subtitle %> <% } %>
  </h3>
  <span>
    <%= book.author %>
  </span>
  <p class="desc unlist">
    <%= book.description %>
  </p>
  <p class="isbn">
    <%= book.isbn %> <% if ( book.bookshelf) { %> &mdash; Bookshelf: <%=
    book.bookshelf %> <% } %>
  </p>
  <button class="unlist" id="update-button">Update Details</button>
  <form class="unlist" action="/books/<%= book.id %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <button id="delete-button">Delete Book</button>
  </form>
</section>
